<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66CCFF" >

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"
        android:ems="15"
        android:singleLine="false" />

    <Button
        android:id="@+id/canButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
       android:textColor="@drawable/textdrawble"
android:background="@drawable/btndrawable"
        android:text="@string/cancel"
        android:textSize="20dp" />

    <Button
        android:id="@+id/comButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/canButton"
        android:layout_alignBottom="@+id/canButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
         android:textColor="@drawable/textdrawble"
android:background="@drawable/btndrawable"
        android:text="@string/comment"
       
        android:textSize="20dp" />

</RelativeLayout>